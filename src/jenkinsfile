pipeline {

    agent any
 
    stages{

        stage("Git checkout"){

            steps{
                git branch: 'main', url: 'https://github.com/Emmylong1/demo-counter-app-1.git'
            }
        }
        stage("UNIT Testing"){

            steps{
                sh "mvn test"
                
            }
        }

        stage("integration testing "){

            steps{
                sh "mvn verify -DskipunitTest"
                
            }
        }

        stage("Maven Build"){

            steps{
                sh "mvn clean install"
            }
        }

    }   
}
